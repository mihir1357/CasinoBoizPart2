    public int getSum(ArrayList<Card> Hand)
    {
        for(int i = 0; i < Hand.size(); i++)
        {
            sum += Hand.get(i).getVal();
        }
        return sum;
    }
    public void hit(ArrayList<Card> Hand)
    {
        Card ace =( deck.get( (int)(Math.random() * 13 )));
        Hand.add( ace );
        if(ace.getName() == "Ace")
        {
            if(getSum(Hand) > 10)
            {
                ace.setAce( 1 );
            }

            if(getSum(Hand) <= 10)
            {
                ace.setAce( 11 );
            }
